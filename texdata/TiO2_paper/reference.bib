@article{Souza-Marsiglio-IJMPB,
author = {Souza, Thiago X. R. and Marsiglio, F.},
title = {The possible role of van Hove singularities in the high Tc of superconducting H3S},
journal = {International Journal of Modern Physics B},
volume = {31},
